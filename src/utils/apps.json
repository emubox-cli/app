    {
        "name": "RPCS3",
        "id": "rpcs3",
        "consoles": ["ps3"],
        "installOptions": {
            "flatpak": "net.rpcs3.RPCS3",
            "aur": "rpcs3-git",
            "aurExportName": "rpcs3",
            "gitRepo": "RPCS3/rpcs3-binaries-linux",
